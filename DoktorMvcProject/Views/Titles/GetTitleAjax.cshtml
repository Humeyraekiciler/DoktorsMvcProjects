@model DoktorMvcProject.Models.TitlesModel.TitlesAjaxCreateViewModel
@{
    ViewBag.Title = "GetTitleAjax";
    var ajaxOptions = new AjaxOptions()
    {
        AllowCache = false,
        Url = Url.Action("AddTitleAjax", "Titles"),
        HttpMethod = "POST",
        UpdateTargetId = "div_users",
        InsertionMode = InsertionMode.Replace

    };
}

<h2 class="myh2">Create & TitlesList</h2>

@using (Ajax.BeginForm(ajaxOptions))
{

    <div class="form-horizontal ">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.titles.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.titles.Title, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>

    </div>
}
<hr />

<div id="div_users">
    @Html.Partial("_TitleList", Model.title_list) @*bu liste güncellenecek*@
</div>

@section ajaxScript{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}

@section classh2style{
    <style>
        .myh2 {
            color: darkgreen
        }
    </style>
}

