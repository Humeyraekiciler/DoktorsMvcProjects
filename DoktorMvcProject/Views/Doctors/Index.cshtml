@model DoktorMvcProject.Models.DoctorsModel.DoctorIndexViewModel

@{
    ViewBag.Title = "Doctors";
}

@{ 
    Html.RenderAction("Welcome");
}

<h2 style="color:darkgreen; font-family:'Times New Roman', Times, serif;">Doctors</h2>


@using (Html.BeginForm("Index", "Doctors", FormMethod.Get))
{
    <table class="table">
        <tr>
            <td style="width:20%">
                Title:
            </td>
            <td>
                @Html.DropDownList("TitleId", Model.Titles, "--All--", new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <input type="submit" value="Search" class="btn-primary" />
            </td>
        </tr>
    </table>
}

<p>
    @Html.ActionLink("Add New Doctor", "Create")
</p>
<br />
<label class="text-success">@TempData["Info"]</label>
<br />


<span style="color:darkviolet;">@Model.Doctors.Count records found</span>
<table class="table">
    <tr>
        <th></th>
        <th>
            @*@Html.DisplayNameFor(model => model.Titles)*@
            Title
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Name)*@
            Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Surname)*@
            Surname
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
            Email
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Phone)*@
            Phone
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.Doctors)
    {
        <tr>

            <td>
                @Html.ActionLink(" ","Edit", new { id = item.Id }, new { @class = "fa fa-pencil-square-o text-success" }) |
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "fa fa-info text-warning" } ) |
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "fa fa-trash text-danger" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title.Title)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                @*@item.Name*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
                @*@item.Surname*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
                @*@item.Email*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
                @*@item.Phone*@
            </td>

        </tr>
    }

</table>
