@model IEnumerable<DoktorMvcProject.Entities.IllPerson>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "IllPersons";
}

@{
    Html.RenderAction("Welcome");
}
<h2 style="color:darkgreen; font-family:'Times New Roman', Times, serif;">@ViewBag.Title</h2>

<hr />

<p>
    @Html.ActionLink("Add New IllPerson", "Create")
</p>
<br />
<label class="text-success">@TempData["Info"]</label>
<br />
<span style="color:darkviolet;">@Model.Count() records found</span>
<br />
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>

        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
